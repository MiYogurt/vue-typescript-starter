{
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom",
      "es2016",
      "es2017",
      "esnext"
    ],
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "jsxFactory": "h",
    "esModuleInterop": true,
    "typeRoots": [
      "./shims",
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "./router"
  ],
  "include": [
    "./**/*.ts"
  ]
}